{% extends "KalkulatorKalkulatorBundle::base.html.twig" %}

{% block pageContainer %}
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                            <h5>Lista produktów</h5>
                    </div>
                        <div class="ibox-content">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Nazwa</th>
                                        <th>Kalorii</th>
                                        <th>Białka</th>
                                        <th>Węglowodany</th>
                                        <th>Tłuszcze</th>
                                        <th>Cena</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for entry in pagination %}
                                        <tr>
                                            <td>{{ entry.id }}</td>
                                            <td>{{ entry.nazwa }}</td>
                                            <td>{{ entry.kalorii }}</td>
                                            <td>{{ entry.bialka }}</td>
                                            <td>{{ entry.wegle }}</td>
                                            <td>{{ entry.tluszcze }}</td>
                                            <td>{{ entry.cena }} PLN</td>
                                            <td>
                                                    <a href="{{ path('kal_produkty_aktualizuj', {'id': entry.id}) }}"><i class="fa fa-pencil-square-o"></i></a>
                                                    <a href="{{ path('kal_produkty_usun', {'id': entry.id}) }}"><i class="fa fa-times"></i></a>
                                            </td>
                                        </tr>
                                    {% else %}
                                    <tr>
                                        <td colspan="5">Brak produktów</td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                            {{ knp_pagination_render(pagination, 'KalkulatorKalkulatorBundle:Pagination:pagination.html.twig') }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
{% endblock %}
